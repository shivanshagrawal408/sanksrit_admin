<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us | Sanskrit Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
            --success: #4CAF50;
            --error: #F44336;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }

        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }

        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }

        .card {
            background: white;
            border-radius: 16px;
            border: none;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
        }

        .card-header {
            background: none;
            border-bottom: 1px solid #E2E8F0;
            padding: 1.5rem;
        }

        .card-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.25rem;
            color: var(--dark);
            margin: 0;
        }

        .card-body {
            padding: 1.5rem;
        }

        .cover-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 16px;
            margin-bottom: 2rem;
        }

        .gallery-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
        }

        .btn-primary:hover {
            background-color: var(--secondary);
            border-color: var(--secondary);
        }

        .section-content {
            color: var(--dark);
            line-height: 1.6;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../partials/sidebar', { 
            activePage: 'about-us',
            activeCategory: null,
            koshCategories: [],
            mcqCategories: []
        }) %>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <div class="topbar">
            <h1 class="page-title">About Us</h1>
            <a href="/about-us/edit" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit Content
            </a>
        </div>

        <% if (aboutUs) { %>
            <!-- Cover Image -->
            <% if (aboutUs.screen_cover_image) { %>
                <div class="card">
                    <div class="card-body">
                        <img src="<%= aboutUs.screen_cover_image %>" alt="Cover Image" class="cover-image">
                    </div>
                </div>
            <% } %>

            <!-- About Our App -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">About Our App</h2>
                </div>
                <div class="card-body">
                    <div class="section-content">
                        <%= aboutUs.about_app %>
                    </div>
                </div>
            </div>

            <!-- Our Inspiration -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Our Inspiration</h2>
                </div>
                <div class="card-body">
                    <div class="section-content">
                        <%= aboutUs.inspiration %>
                    </div>
                </div>
            </div>

            <!-- Our Objective -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Our Objective</h2>
                </div>
                <div class="card-body">
                    <div class="section-content">
                        <%= aboutUs.objective %>
                    </div>
                </div>
            </div>

            <!-- Work Ethics -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Work Ethics</h2>
                </div>
                <div class="card-body">
                    <div class="section-content">
                        <%= aboutUs.work_ethics %>
                    </div>
                </div>
            </div>

            <!-- Address -->
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Address</h2>
                </div>
                <div class="card-body">
                    <div class="section-content">
                        <%= aboutUs.address %>
                    </div>
                </div>
            </div>

            <!-- Gallery -->
            <% if (aboutUs.images && aboutUs.images.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Gallery</h2>
                    </div>
                    <div class="card-body">
                        <div class="gallery-grid">
                            <% aboutUs.images.forEach(image => { %>
                                <div>
                                    <img src="<%= image %>" alt="Gallery Image" class="gallery-image">
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="card">
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        No content available. Click the "Edit Content" button to add information.
                    </div>
                </div>
            </div>
        <% } %>
    </main>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html> 