<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Media Gallery | Sanskrit Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
            --success: #4CAF50;
            --error: #F44336;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }

        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }

        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }

        .card {
            background: white;
            border-radius: 16px;
            border: none;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
        }

        .card-header {
            background: none;
            border-bottom: 1px solid #E2E8F0;
            padding: 1.5rem;
        }

        .card-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.25rem;
            color: var(--dark);
            margin: 0;
        }

        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            padding: 1.5rem;
        }

        .media-item {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform 0.2s;
        }

        .media-item:hover {
            transform: translateY(-4px);
        }

        .media-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .media-info {
            padding: 1rem;
        }

        .media-name {
            font-weight: 500;
            margin-bottom: 0.5rem;
            word-break: break-all;
        }

        .media-meta {
            font-size: 0.875rem;
            color: #666;
            margin-bottom: 0.5rem;
        }

        .media-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-copy {
            background: var(--accent);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .btn-copy:hover {
            background: var(--secondary);
        }

        .btn-delete {
            background: var(--error);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .btn-delete:hover {
            background: #d32f2f;
        }

        .upload-form {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
        }

        .toast {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            background: var(--success);
            color: white;
            padding: 1rem 2rem;
            border-radius: 8px;
            box-shadow: var(--shadow-lg);
            display: none;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../partials/sidebar', { 
            activePage: 'media',
            activeCategory: null,
            koshCategories: [],
            mcqCategories: []
        }) %>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <div class="topbar">
            <h1 class="page-title">Media Gallery</h1>
        </div>

        <!-- Upload Form -->
        <div class="upload-form">
            <form action="/media/upload" method="POST" enctype="multipart/form-data">
                <div class="row align-items-end">
                    <div class="col-md-6">
                        <label for="file" class="form-label">Upload New Image</label>
                        <input type="file" class="form-control" id="file" name="file" accept="image/*" required>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload me-2"></i>Upload
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Media Grid -->
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">All Media</h2>
            </div>
            <div class="media-grid">
                <% mediaFiles.forEach(media => { %>
                    <div class="media-item">
                        <img src="<%= media.url %>" alt="<%= media.originalname %>" class="media-image">
                        <div class="media-info">
                            <div class="media-name"><%= media.originalname %></div>
                            <div class="media-meta">
                                <%= (media.size / 1024).toFixed(1) %> KB â€¢ 
                                <%= new Date(media.createdAt).toLocaleDateString() %>
                            </div>
                            <div class="media-actions">
                                <button class="btn-copy" onclick="copyUrl('<%= media.url %>')">
                                    <i class="fas fa-copy me-2"></i>Copy URL
                                </button>
                                <button class="btn-delete" onclick="deleteMedia('<%= media._id %>')">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>

    <!-- Toast Notification -->
    <div class="toast" id="toast"></div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyUrl(url) {
            const fullUrl = window.location.origin + url;
            navigator.clipboard.writeText(fullUrl).then(() => {
                showToast('URL copied to clipboard!');
            });
        }

        function deleteMedia(id) {
            if (confirm('Are you sure you want to delete this image?')) {
                fetch(`/media/${id}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        showToast('Error deleting image', true);
                    }
                })
                .catch(error => {
                    showToast('Error deleting image', true);
                });
            }
        }

        function showToast(message, isError = false) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.background = isError ? 'var(--error)' : 'var(--success)';
            toast.style.display = 'block';
            
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html> 